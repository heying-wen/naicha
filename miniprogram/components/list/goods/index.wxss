.goods-list{
  width: 100%;
  height: 100%;
  background: #fff;
  padding-left: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.goods-title{
  width: 100%;
  height: 90rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 90rpx;
  position: absolute;
  left: 20rpx;
  top: 0;
  background: #fff;
  z-index: 99;
}
.scroll-goods-view{
  width: 100%;
  height: 100%;
  padding-top: 90rpx;
  box-sizing: border-box;
}
.goods-item{
  width: 100%;
  display: flex;
  margin-bottom: 60rpx;
}
.goods-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.goods-info{
  width: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin: 0 20rpx;
  position: relative;
}
.goods-name{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #666;
  font-size: 28rpx;
}
.goods-price{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}