.category-container{
  width: 100%;
  height: 100%;
}
.category-item{
  width: 100%;
  height: 90rpx;
  display: flex;
  padding-left: 20rpx;
  box-sizing: border-box;
  align-items: center;
  font-size: 28rpx;
}
.active{
  background: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}
.hot-icon{
  background: #ff5d5a;
}
.discount-icon{
  background: #fde754;
}